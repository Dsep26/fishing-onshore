<%= render "shared/navbar" %>
<div class="container">
  <h1>Fishing Spots#index</h1>
  <p>Find me in app/views/fishing_spots/index.html.erb</p>

   <div class="search">
    <%= form_with url: fishing_spots_path, method: :get, class: "d-flex search-field" do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find Your Location"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="card-container">
    <% @fishingspots.each do |fishing_spot| %>
      <div class="row">
        <div class="col-sm-6">
          <div class="card card-block">
            <h3 class="card-title"><%= fishing_spot.address %></h3>
            <p class="card-text">Fishing Activity: <%= fishing_spot.fishing_activity %></p>
            <%= cl_image_tag fishing_spot.photo.key, height: 200, width: 200, crop: :fill %>
            <%= link_to "Go Somewhere", fishing_spot_path(fishing_spot), class: "btn btn-primary"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
