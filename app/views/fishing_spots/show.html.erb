
<h1>FishingSpots#show</h1>
<p>Find me in app/views/fishing_spots/show.html.erb</p>

  <%= link_to "click me", fishing_spot_hints_path(@fishingspot), class: "btn btn-primary" %>

<div style="width: 100%; height: 400px;"
  data-controller="map"
  data-map-marker-value="<%= @marker.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div>
    <p><%= @condition %></p>
    <p><%= @temperature %></p>
    <p><%= @windspeed %></p>
    <p><%= @winddirection %></p>
    <p><%= @humidity %></p>
</div>
