<%= simple_form_for([@discussion, @reply], remote: true) do |f| %>

<div class="field">
  <div class="control">
    <%= f.input :content, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
  </div>
</div>
<div class="btn">
<%= f.button :submit, 'Leave a reply', class:'button-rep is-info' %>
</div>
<% end %>
