<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-48x48">
        <%= reply.user.name %>
      </figure>
    </div>
    <div class="media-content">
      <div class="content-rep">
        <p>
          <strong><%= reply.user.name %></strong> <small><%= time_ago_in_words(reply.created_at) %></small>
          <br/>
          <%= reply.content %>
        </p>
        <a class="level-item">
            <%= link_to [reply.discussion, reply],
                data: {turbo_method: :delete, turbo_confirm: "Are you sure ?" } do %>
            <span class="icon is-small"><i class="fa-duotone fa-dumpster"></i></span>
            <% end %>
          </a>
      </div>
      <% if reply.user == current_user %>
      <nav class="level is-mobile">
        <div class="level-left">
          <a class="level-item">     
          </a>
        </div>
      </nav>
      <% end %>
    </div>
  </article>
</div>