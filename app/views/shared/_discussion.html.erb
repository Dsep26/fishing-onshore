<div class="dis-content">
  <div class="column-contain is-8">
    <h3 class="title is-5">Spot Discussion</h3>
    <div class="discussions">
      <% @discussions.each do |discussion| %>
        <div class="columns-message bb-not-last pv10">         
          <div class="column is-8">
            <%= link_to discussion_path(discussion) do %>
              <h3 class="title-dis is-5"><%= discussion.title.capitalize %></h3>
            <% end %>
             <h2 class="con-text"> <%= discussion.content.capitalize %></h2>
              <p class="post"><em><strong class="column-user"><%= discussion.user.name.capitalize %></strong><small>Posted <%= time_ago_in_words(discussion.created_at) %> ago in
                by <%= discussion.user.name %>
                </small>
                </em>
              </p>
              <% if discussion.user == current_user %>
              <%# <%= link_to 'Edit', edit_discussion_path(discussion), class:'button' %> 
              <%= link_to fishing_spot_discussions_path,  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "button-disc" do %>
                <i class="fa-solid fa-trash-can"></i> 
              <% end %>  
          </div>
        <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>  