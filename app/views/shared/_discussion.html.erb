<div class="column is-8">
  <h3 class="title is-5 has-text-grey-light">Spot Discussions</h3>
  <div class="discussions">
    <% @discussions.each do |discussion| %>
      <div class="columns bb-not-last pv10">
        <div class="column is-1">
          <%= discussion.user.name %>
        </div>
        <div class="column is-8">
          <%= link_to discussion_path(discussion) do %>
            <h3 class="title is-5"><%= discussion.title %></h3>
          <% end %>
          <div class="content-reply">
            <%= discussion.content %>
            <p><em><small>Posted <%= time_ago_in_words(discussion.created_at) %> ago in
              by <%= discussion.user.name %>
              </small>
              </em>
            </p>
          </div>
        </div>

        <% if discussion.user == current_user %>
        <div class="column has-text-right">
          <%# <%= link_to 'Edit', edit_discussion_path(discussion), class:'button' %> 
          <%= link_to 'Delete', fishing_spot_discussions_path,  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "button" %>
        </div>
        <% end %>

      </div>
    <% end %>
  </div>
</div>